<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#FFFF"
    >

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="635dp"
        android:layout_centerHorizontal="true"
  
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="注册新帐号"
        android:textSize="10pt"
        android:textColor="#000000"
         />

    <TextView
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="用户名"
        android:textColor="#000000"
        android:textSize="10pt" />

    <EditText
        android:id="@+id/et_Regiester_userName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/qq_edit_login"
        android:hint="请填写用户名"
        android:selectAllOnFocus="true"
    />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="密码"
        android:textSize="10pt"
        android:textColor="#000000"
        
         />
    <EditText
        android:id="@+id/et_Regiester_passWord"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/qq_edit_login"
        android:hint="请输入密码"
        android:password="true"
    />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="确认密码"
        android:textSize="10pt"
        android:textColor="#000000"
         />
    <EditText
        android:id="@+id/et_Regiester_confirmpassWord"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/qq_edit_login"
        android:hint="再次输入密码"
        android:selectAllOnFocus="true"
        android:phoneNumber="true"
        android:password="true"
    />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="电话号码"
        android:textSize="10pt"
        android:textColor="#000000"
         />
    <EditText
        android:id="@+id/et_Regiester_Phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/qq_edit_login"
        android:hint="请填写电话号码"
        android:selectAllOnFocus="true"
        android:phoneNumber="true"
    />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="邮箱"
        android:textSize="10pt"
        android:textColor="#000000"
         />
    <EditText
        android:id="@+id/et_Regiester_Email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/qq_edit_login"
        android:hint="请填写邮箱"
        android:selectAllOnFocus="true"
        
    />

  
<LinearLayout  
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content" > 
    <CheckBox
        android:id="@+id/cb_Regiester_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="已阅读并同意"
        android:textColor="#888888" />

    <TextView
        android:id="@+id/bt_Regiester_Server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="《快递服务条款》"
        android:textColor="#5858f8" />
  
  </LinearLayout>  
     <Button
           android:id="@+id/bt_Regiester_commit"
           android:layout_width="228dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="18dp"
           android:background="@drawable/background_button_div"
           android:onClick="myclick"
           android:text="注册" />

        </LinearLayout>
</TableLayout>