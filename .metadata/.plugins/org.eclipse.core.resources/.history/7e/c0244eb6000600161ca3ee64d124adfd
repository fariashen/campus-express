package easyCourierHttpPost;

import easyCourierFunction.ShowRequestAllInfo;

public class SRAIHttpPost extends HttpPostRequest {

	//获取的订单信息
	private String nickName = "";
	private String reward = "";
	private String addForm = "";
	private String addTo = "";
	private String timeLimit = "";
	private String size = "";
	private String phone = "";
	private String kinds = "";
	private String remarks = "";
	
	@Override
	protected void setUrlAddress() {
		// TODO 设置网络请求地址
		urlAddress = "";

	}

	@Override
	protected void setParamsIntoPost() {
		// TODO 设置传送的参数

	}

	@Override
	protected void setIsJsonData() {
		
		isJsonData = true;

	}

	@Override
	protected void getDifferentJsonArrayValue() {
		// TODO Auto-generated method stub

	}

	@Override
	protected void backToMainThreadHandleMessage() {

		ShowRequestAllInfo.sraiHandler.post(new Runnable() {
			
			@Override
			public void run() {

				ShowRequestAllInfo.tv_SRAI_NickName.setText(nickName);
				ShowRequestAllInfo.tv_SRAI_Reward.setText(reward);
				ShowRequestAllInfo.tv_SRAI_AddForm.setText(addForm);
				ShowRequestAllInfo.tv_SRAI_AddTo.setText(addTo);
				ShowRequestAllInfo.tv_SRAI_TimeLimit.setText(timeLimit);
				ShowRequestAllInfo.tv_SRAI_Size.setText(size);
				ShowRequestAllInfo.tv_SRAI_Phone.setText(phone);
				ShowRequestAllInfo.tv_SRAI_Kinds.setText(kinds);
				ShowRequestAllInfo.tv_SRAI_Remarks.setText(remarks);
				
				
			}
		});
	}

}
