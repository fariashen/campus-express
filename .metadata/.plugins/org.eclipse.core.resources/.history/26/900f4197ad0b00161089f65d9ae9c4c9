		 * 
		 * 根据不同的ID，做出不同的响应
		 * 
		 */

		switch (v.getId()) {

		// 当点击“个人信息”按钮时，触发调用 PersonalInfoShow.java
		case R.id.tv_PersonalCenter_PI:

			intent = new Intent(mView.getContext(), PersonalInfoShow.class);
			startActivity(intent);
			break;
